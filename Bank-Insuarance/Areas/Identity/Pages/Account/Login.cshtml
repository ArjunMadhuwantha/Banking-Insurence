@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<head>

  <link rel="stylesheet" href="~/css/UserLoginStyle.css">
  <script src="~/js/UserloginScript.js"></script>
  <title>user login</title>
</head>




<body>
    <div class="mainDiv">


        <header class="header">
        </header>

        <div class="frame">

            <div class="contentDiv_1">
                <div class="login_logo_div"><img class="login_logo" src="~/images/login_logo.png" alt="login logo"></div>
                <form id="account" method="post">
                    <div class="Username_Psaaword_Div" id="Username_Psaaword_Div">
                        <div class="username_div">
                            <label class="username_label Gray">Username</label>
                            <div class="username_input_div">
                                <img class="username_input_image" src="~/images/user.png">
                                
                                <input asp-for="Input.Email" class="username_input_txt" autocomplete="username" aria-required="true" placeholder="name@example.com" />

                            </div>
                            <hr class="hr" id="hr1">
                        </div>

                        <div class="password_div">
                            <label class="password_label Gray">Password</label>
                            <div class="password_input_div">
                                <img class="password_input_image" src="~/images/password.png">
                                
                                <input asp-for="Input.Password" class="password_input_txt" id="passwordInput" type="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <img class="password_visibility_image" id="toggleButton" src="~/images/visibility.png" onclick="togglePasswordVisibility()">
                            </div>
                            <hr class="hr" id="hr2">
 
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>


                        </div>

                        <div class="login_btn_div">
                            <button type="submit" class="login_btn" >Login</button>
                        </div>
                    </div>
                </form>

                
            </div>

        </div>

        
            
       
    </div>

</body>




























